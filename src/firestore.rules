
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin(); // Only admin can list all users
      allow create: if isOwner(userId);
      allow update: if (isOwner(userId) && request.resource.data.balance <= resource.data.balance) || isAdmin();
      allow delete: if isAdmin();
      
      // Rule for user's own orders subcollection.
      // This allows a user to read and write to their own orders list.
      match /userGameOffers/{userGameOfferId} {
        allow read, write: if isOwner(userId);
      }
    }

    match /gameOffers/{gameOfferId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // This collectionGroup handles permissions for admins to query across ALL userGameOffers.
    // It is separate from the user's direct access rule above.
    match /{path=**}/userGameOffers/{userGameOfferId} {
       // Admins can read and update any order.
       allow get, list, update: if isAdmin();
    }

     match /roles_admin/{userId} {
       allow get: if true;
       allow list, create, delete: if isAdmin();
       allow update: if false;
     }
  }
}
