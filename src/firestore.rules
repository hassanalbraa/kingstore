
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    match /users/{userId} {
      allow get, update: if isOwner(userId) || isAdmin();
      allow list: if isAdmin(); 
      allow create: if isOwner(userId);
      allow delete: if isAdmin();
    }

    match /gameOffers/{gameOfferId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }
    
    match /userGameOffers/{userGameOfferId} {
       allow create: if isOwner(request.resource.data.userId);
       allow list, get: if isAdmin() || request.auth.uid == request.resource.data.userId;
       allow update: if isAdmin();
       allow delete: if false;
    }

     match /roles_admin/{userId} {
       allow get: if true;
       allow list, create, delete: if isAdmin();
       allow update: if false;
     }
  }
}
