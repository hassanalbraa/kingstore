
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // WARNING: These rules are temporarily permissive for debugging.
    // They allow any authenticated user to read and write all data.
    // This is NOT secure for a production environment.

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Admin check still relies on the existence of a document in roles_admin
      return request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Allow any authenticated user to read/write any document.
    // This will be refined later.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
