
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if request.auth != null;
      allow create: if isOwner(userId);
      allow update: if (isOwner(userId) && request.resource.data.balance <= resource.data.balance) || isAdmin();
      allow delete: if isAdmin();
    }

    match /gameOffers/{gameOfferId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }
    
    match /userGameOffers/{userGameOfferId} {
       // Admins can read and update any order.
       allow get, list, update: if isAdmin();
       // Users can create their own documents, rule checks if the new doc belongs to the user.
       allow create: if isOwner(request.resource.data.userId);
       // Users can read their own documents (e.g. for a detail page or via a query).
       allow get: if isOwner(resource.data.userId);
       // Users cannot update or delete orders. Admins can update, but cannot delete.
       allow delete: if false;
    }


     match /roles_admin/{userId} {
       allow get: if true;
       allow list, delete: if isAdmin();
       allow create: if isOwner(userId);
       allow update: if false;
     }
  }
}
