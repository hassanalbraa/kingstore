
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin(); // Only admin can list all users
      allow create: if isOwner(userId);
      // Allow user to update their own balance, but only through a transaction
      // Admin can update anything.
      allow update: if (isOwner(userId) && request.resource.data.balance != resource.data.balance) || isAdmin();
      allow delete: if isAdmin();

      // This subcollection rule is no longer needed as collectionGroup handles permissions more globally.
      // match /userGameOffers/{offerId} { ... }
    }

    match /gameOffers/{gameOfferId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // This collectionGroup handles all permissions for userGameOffers across the app.
    match /{path=**}/userGameOffers/{userGameOfferId} {
       // Admins can read and update any order.
       allow get, list, update: if isAdmin();
       
       // Users can create their own orders.
       allow create: if isOwner(request.resource.data.userId);

       // Regular users cannot delete orders directly.
       allow delete: if false;
    }

     match /roles_admin/{userId} {
       allow get: if true;
       allow list, create, delete: if isAdmin();
       allow update: if false;
     }
  }
}
