
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin(); // Only admin can list all users
      allow create: if isOwner(userId);
      // Allow user to update their own balance ONLY if it's a decrement (part of a transaction)
      // Admin can update anything.
      allow update: if (isOwner(userId) && request.resource.data.balance <= resource.data.balance) || isAdmin();
      allow delete: if isAdmin();

      // Rule for the user's own game offers subcollection
      match /userGameOffers/{offerId} {
        // User can do anything to their own subcollection
        allow read, write: if isOwner(userId);
      }
    }

    match /gameOffers/{gameOfferId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // This collectionGroup is now only for the admin to query all pending orders across all users
    match /{path=**}/userGameOffers/{userGameOfferId} {
       allow get, list, update: if isAdmin();
       // Disallow create/delete on this path to avoid confusion.
       // Creation happens under /users/{userId}/...
       // Deletion is handled by the user themselves.
       allow create, delete: if false;
    }

     match /roles_admin/{userId} {
       allow get: if true;
       allow list, create, delete: if isAdmin();
       allow update: if false;
     }
  }
}

    